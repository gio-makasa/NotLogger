<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- App Name & Timestamp (Top Row) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="WhatsApp Messenger" />

            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#757575"
                android:textSize="12sp"
                tools:text="Nov 22, 2025 10:30:45" />
        </RelativeLayout>

        <!-- Sender/Title -->
        <TextView
            android:id="@+id/tv_sender_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="John Doe" />

        <!-- Content/Text -->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Hey, can you send over the final report by 5 PM today? We need to review it before the meeting." />

    </LinearLayout>
</androidx.cardview.widget.CardView>